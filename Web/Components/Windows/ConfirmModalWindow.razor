
<ModalWindow @ref="Window" CloseOnBackgroundClick="false">

	<div class="gradient-panel card-form p-4" @onclick:stopPropagation="true">

		<h2>Confirm?</h2>

		<span class="mt-3">@Message</span>

		<div class="row mt-3">

			<div class="col-sm-6">
				<button class="button" @onclick="() => Confirm()">Confirm</button>
			</div>

			<div class="col-sm-6 mt-2 mt-sm-0">
				<button class="button-glass" @onclick="() => Close()">Cancel</button>
			</div>

		</div>
	</div>

</ModalWindow>

@code {

	[Parameter]
	public Func<Task> OnConfirm { get; set; } = default!;

	[Parameter]
	public string Message { get; set; } = string.Empty;

	private ModalWindow Window { get; set; } = default!;

	private void Confirm()
	{
		OnConfirm?.Invoke();
		Close();
	}

	public void Open() => Window.Open();

	public void Close() => Window.Close();
}
