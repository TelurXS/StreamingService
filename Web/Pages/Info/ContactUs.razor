@attribute [Route(WebRoutes.Info.ContactUs)]
@layout InfoLayout

@inject NavigationManager NavigationManager

<Glow Size="200" Top="-200px" Blur="100" Left="calc(50% - 100px)" ShadowColor="var(--primary)" />
<Glow Size="80" Top="800px" Blur="100" Left="0" ShadowColor="var(--primary)" />

<div class="position-relative d-flex flex-column" style="z-index: 30">
	<a href="@WebRoutes.Info.HelpCenter" class="font-white"><i class="bi bi-chevron-left"></i> Back to Help Center</a>

	<h1 class="mt-5 mb-5">Contact Us</h1>

	<p>Describe in more detail and we will find the best solution for you</p>

	<EditForm Model="Input" OnValidSubmit="OnSubmit">

		<div class="row">
			<div class="col-lg-5 d-flex">

				<InputText @bind-Value="Input.Subject" class="input-underline mx-2" placeholder="Describe your problem" />

				<button class="button-glass button-fit px-2 py-1"><i class="bi bi-chevron-right"></i></button>
			
			</div>
		</div>

		<div class="mt-5 mb-5"></div>

		<h4>Quick Links</h4>

		<ul class="mt-3" style="list-style: none">
			<li class="mt-2"><a href="https://mail.google.com/mail/?view=cm&fs=1&to=xflick@xflick@ukr.net&bcc=xflick@ukr.net&body=Describe%20your%20problem&su=Submit%20a%20request%20for%20TV%20series%20or%20movies" class="font-gray text-decoration-underline">Submit a request for TV series or movies</a></li>
			<li class="mt-2"><a href="https://mail.google.com/mail/?view=cm&fs=1&to=xflick@xflick@ukr.net&bcc=xflick@ukr.net&body=Describe%20your%20problem&su=Update%20email%20address" class="font-gray text-decoration-underline">Update email address</a></li>
			<li class="mt-2"><a href="https://mail.google.com/mail/?view=cm&fs=1&to=xflick@xflick@ukr.net&bcc=xflick@ukr.net&body=Describe%20your%20problem&su=Update%20password" class="font-gray text-decoration-underline">Update password</a></li>
			<li class="mt-2"><a href="https://mail.google.com/mail/?view=cm&fs=1&to=xflick@xflick@ukr.net&bcc=xflick@ukr.net&body=Describe%20your%20problem&su=Update%20payment%20method" class="font-gray text-decoration-underline">Update payment method</a></li>
			<li class="mt-2"><a href="https://mail.google.com/mail/?view=cm&fs=1&to=xflick@xflick@ukr.net&bcc=xflick@ukr.net&body=Describe%20your%20problem&su=Cancel%20account" class="font-gray text-decoration-underline">Cancel account</a></li>
			<li class="mt-2"><a href="https://mail.google.com/mail/?view=cm&fs=1&to=xflick@xflick@ukr.net&bcc=xflick@ukr.net&body=Describe%20your%20problem&su=View%20payment%20history" class="font-gray text-decoration-underline">View payment history</a></li>
			<li class="mt-2"><a href="https://mail.google.com/mail/?view=cm&fs=1&to=xflick@xflick@ukr.net&bcc=xflick@ukr.net&body=Describe%20your%20problem&su=Restore%20account" class="font-gray text-decoration-underline">Restore account</a></li>
		</ul>
		
	</EditForm>

	<div class="mt-5 mb-5"></div>

</div>

@code {

	private InputModel Input { get; set; } = new();

	private void OnSubmit()
	{
		var subject = Input.Subject.Replace(" ", "%20");

		NavigationManager.NavigateTo($"https://mail.google.com/mail/?view=cm&fs=1&to=xflick@xflick@ukr.net&bcc=xflick@ukr.net&body=Describe%20your%20problem&su={subject}");
	}

	private sealed class InputModel
	{
		[Required]
		public string Subject { get; set; } = string.Empty;
	}
}