@attribute [Route(WebRoutes.RegistrationSuccess)]
@layout MinimalisticLayout

@inject NavigationManager NavigationManager
@inject IIdentityService IdentityService

<Background />

<div class="row g-3 align-items-center justify-content-center">
	<div class="card card-form back-dark border-primary rounded-corners p-4 form-shadow-primary">
		<div class="card-body">

			<h2 class="text-white mb-2">Register</h2>

			<p>
				You have successfully registered.
			</p>

			<p>
				A confirmation email has been sent to your email address. Follow the link in the email to continue registration
			</p>

			<a href="/" class="btn btn-outline-primary rounded-corners w-100 font-gray">To Home Page</a>
		</div>
	</div>
</div>